<!DOCTYPE html>
<html>
  <head>
    <title>DataProject</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar">
      <section class="navbar-section">
        <a href="/" class="btn btn-link">Pokemon</a>
        <a href="/types" class="btn btn-link">Types</a>
        <a href="/moves" class="btn btn-link">Moves</a>
        <a href="/pages/about" class="btn btn-link">About</a>
      </section>
      <section class="navbar-center">
        <a href="/"><%= image_tag "pokeball-icon.png", alt: 'pokeball'  %></a>
      </section>
      <section class="navbar-section">
        <%= form_tag(pokemons_path, method: :get, :class => "form-horizontal") do %>
          <div class="form-group">
            <div class="col-9 col-sm-12">
              <%= text_field_tag :search, params[:search], :class => "form-input" %>
            </div>
          </div>
          <%= submit_tag 'Search for pokemon', name: nil, :class => "btn btn-primary" %>
        <% end %>
      </section>
    </header>

    <div class="container grid-md">
      <%= yield %>
    </div>
  </body>
</html>
